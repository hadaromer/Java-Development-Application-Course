<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" minHeight="100.0" minWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HeaderController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="20.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <TextField fx:id="XMLFilePathText" alignment="TOP_LEFT" editable="false" prefHeight="27.0" prefWidth="250.0" promptText="Simulation not loaded" GridPane.columnIndex="4" GridPane.columnSpan="3" GridPane.rowIndex="1" />
      <Button accessibleHelp="Load XML file for a new simulation" alignment="CENTER" mnemonicParsing="false" onMouseClicked="#LoadSimulationHandler" text="Load Simulation" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <Button fx:id="queueButton" disable="true" mnemonicParsing="false" onMouseClicked="#queueOnClick" text="Queue Management" GridPane.columnIndex="8" GridPane.columnSpan="2" GridPane.rowIndex="1" />
      <Button fx:id="detailsButton" disable="true" mnemonicParsing="false" onMouseClicked="#switchToDetailsScreen" text="Details" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="newExecutionButton" disable="true" mnemonicParsing="false" onMouseClicked="#switchToNewExecutionScreen" text="New Execution" GridPane.columnIndex="5" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <Button fx:id="resultsButton" disable="true" mnemonicParsing="false" onMouseClicked="#switchToResultsScreen" text="Results" GridPane.columnIndex="6" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
      <ComboBox fx:id="themesComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      <CheckBox fx:id="animationsCheckBox" mnemonicParsing="false" text="Animations" GridPane.columnIndex="7" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      <Button mnemonicParsing="false" onMouseClicked="#helpOnClick" text="Help" GridPane.columnIndex="9" GridPane.rowIndex="3" />
   </children>
</GridPane>
